@page "/books"

@using System.Net.Http.Json
@using BusinessManager.Models.DTOs;
@inject ISnackbar Snackbar

<PageTitle>Book List</PageTitle>

<MudTable Items="@elements" Hover="true" Striped="true" @bind-SelectedItem="selectedItem" Loading="isLoading"
          Filter="new Func<BookDTO,bool>(FilterFunc)">
    <LoadingContent>
        <MudProgressCircular Color="Color.Default" Indeterminate="true" />
    </LoadingContent>
    <ToolBarContent>
        <MudText Typo="Typo.h6">Book List</MudText>
        <MudSpacer />
        <MudTextField @bind-Value="searchString" Placeholder="Search" Adornment="Adornment.Start" AdornmentIcon="@Icons.Material.Filled.Search" IconSize="Size.Medium" Class="mt-0"></MudTextField>
        <MudLink Href="/books/create">
            <MudIconButton Icon="@Icons.Material.Filled.Add" Variant="Variant.Filled" Color="Color.Primary" ButtonType="ButtonType.Button" />
        </MudLink>
        
    </ToolBarContent>
    <ColGroup>
        <col />
        <col />
        <col />
        <col />
        <col />
        <col />
        <col style="width:80px;" />
    </ColGroup>
    <HeaderContent>
        <MudTh>Title</MudTh>
        <MudTh>Publisher</MudTh>
        <MudTh>Cover Form</MudTh>
        <MudTh>Price</MudTh>
        <MudTh>Discount</MudTh>
        <MudTh>Published Date</MudTh>
    </HeaderContent>
    <RowTemplate>
        <MudTd DataLabel="Title">@context.Title</MudTd>
        <MudTd DataLabel="Publisher">@context.Publisher!.Name</MudTd>
        <MudTd DataLabel="Cover Form">@context.CoverForm!.CoverName</MudTd>
        <MudTd DataLabel="Price">@context.Price</MudTd>
        <MudTd DataLabel="Discount">@(context.Discount*100)%</MudTd>
        <MudTd DataLabel="Published Date">@context.PublishedDate</MudTd>
        <MudTd>
            <div class="d-flex">
                <MudLink Href="@($"/books/edit/{context.Id}")">
                    <MudIconButton Size="@Size.Small" Icon="@Icons.Material.Outlined.Edit" Class="pa-0 flex-auto" />
                </MudLink>
                <MudIconButton Size="@Size.Small" Icon="@Icons.Material.Outlined.Delete" Class="pa-0 flex-auto" />
            </div>
        </MudTd>
    </RowTemplate>
    <PagerContent>
        <MudTablePager />
    </PagerContent>
</MudTable>
