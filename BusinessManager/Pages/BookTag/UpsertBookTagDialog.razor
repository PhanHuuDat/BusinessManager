@inject ISnackbar Snackbar
@inject IUnitOfWork UnitOfWork
<MudDialog>
    <TitleContent>
        @if (bookTag!.Id == 0)
        {
            <MudText Typo="Typo.h6">
                <MudIcon Icon="@Icons.Material.Filled.Add" Class="mr-3 mb-n1" />
                Add Category
            </MudText>
        }
        else
        {
            <MudText Typo="Typo.h6">
                <MudIcon Icon="@Icons.Material.Filled.Update" Class="mr-3 mb-n1" />
                Update Category
            </MudText>
        }
    </TitleContent>
    <DialogContent>
        <EditForm Model="bookTag" OnValidSubmit="OnValidSubmit" id="add-category">
            <DataAnnotationsValidator />
            <MudTextField Label="Category" @bind-Value="bookTag!.Name" For="@(() => bookTag!.Name)" />
        </EditForm>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel" Disabled="isDisabled">Cancel</MudButton>
        @if (bookTag!.Id == 0)
        {
            <MudButton Color="Color.Primary" ButtonType="ButtonType.Submit" Disabled="isDisabled" form="add-category">Add</MudButton>
        }
        else
        {
            <MudButton Color="Color.Primary" ButtonType="ButtonType.Submit" Disabled="isDisabled" form="add-category">Update</MudButton>
        }
    </DialogActions>
</MudDialog>
@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }
    private bool isDisabled = false;

    [Parameter] public BookTagDTO? bookTag { get; set; } = new BookTagDTO();

    private async void OnValidSubmit(EditContext editContext)
    {
        isDisabled = true;
        if (bookTag!.Id == 0)
        {
            bookTag = await UnitOfWork.BookTag.CreateAsync(bookTag);
            if(bookTag != null)
            {
                Snackbar.Add("Added Successfully", Severity.Success);
            }
            else
            {
                Snackbar.Add("Added Failed", Severity.Error);
            }
        }
        else
        {
            bookTag = await UnitOfWork.BookTag.UpdateAsync(bookTag);
            if(bookTag != null)
            {
                Snackbar.Add("Updated Successfully", Severity.Success);
            }
            else
            {
                Snackbar.Add("Updated Failed", Severity.Error);
            }
        }
        isDisabled = false;
        MudDialog.Close(DialogResult.Ok(bookTag));
    }

    private void Cancel() => MudDialog.Cancel();
}