@inject ISnackbar Snackbar
@inject IUnitOfWork UnitOfWork
<MudDialog>
    <TitleContent>
        @if (item!.Id == 0)
        {
            <MudText Typo="Typo.h6">
                <MudIcon Icon="@Icons.Material.Filled.Add" Class="mr-3 mb-n1" />
                Add Cover Form
            </MudText>
        }
        else
        {
            <MudText Typo="Typo.h6">
                <MudIcon Icon="@Icons.Material.Filled.Update" Class="mr-3 mb-n1" />
                Update Cover Form
            </MudText>
        }
    </TitleContent>
    <DialogContent>
        <EditForm Model="item" OnValidSubmit="OnValidSubmit" id="add-cover-form">
            <DataAnnotationsValidator />
            <MudTextField Label="Cover Form" @bind-Value="item!.CoverName" For="@(() => item!.CoverName)" />
        </EditForm>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel" Disabled="isDisabled">Cancel</MudButton>
        @if (item!.Id == 0)
        {
            <MudButton Color="Color.Primary" ButtonType="ButtonType.Submit" Disabled="isDisabled" form="add-cover-form">Add</MudButton>
        }
        else
        {
            <MudButton Color="Color.Primary" ButtonType="ButtonType.Submit" Disabled="isDisabled" form="add-cover-form">Update</MudButton>
        }
    </DialogActions>
</MudDialog>
@code {

    [CascadingParameter] MudDialogInstance MudDialog { get; set; }

    private bool isDisabled = false;

    [Parameter] public CoverFormDTO? item { get; set; } = new();

    private async void OnValidSubmit(EditContext editContext)
    {
        isDisabled = true;
        if (item!.Id == 0)
        {
            item = await UnitOfWork.CoverForm.CreateAsync(item);
            if (item != null)
            {
                Snackbar.Add("Added Successfully", Severity.Success);
                await UnitOfWork.SaveAsync();
            }
            else
            {
                Snackbar.Add("Added Failed", Severity.Error);
            }
        }
        else
        {
            item = await UnitOfWork.CoverForm.UpdateAsync(item);
            if (item != null)
            {
                Snackbar.Add("Updated Successfully", Severity.Success);
                await UnitOfWork.SaveAsync();
            }
            else
            {
                Snackbar.Add("Updated Failed", Severity.Error);
            }
        }
        isDisabled = false;
        MudDialog.Close(DialogResult.Ok(item));
    }

    private void Cancel() => MudDialog.Cancel();
}